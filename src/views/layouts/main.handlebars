<h2>Lista de Productos</h2>

{{#if products.length}}
  <ul>
    {{#each products}}
      <li>
        <strong>{{title}}</strong>
        - ${{price}}<br />
        {{description}}<br />
        <em>Stock: {{stock}}</em>
      </li>
    {{/each}}
  </ul>

  <nav>
    <div style="margin-top: 20px;">
      {{#if hasPrevPage}}
        <a
          href="/products?page={{prevPage}}&limit={{limit}}&sort={{sort}}"
        >Anterior</a>
      {{/if}}

      <span style="margin: 0 10px;">PÃ¡gina {{page}} de {{totalPages}}</span>

      {{#if hasNextPage}}
        <a
          href="/products?page={{nextPage}}&limit={{limit}}&sort={{sort}}"
        >Siguiente</a>
      {{/if}}
    </div>
  </nav>
{{else}}
  <p>No hay productos disponibles.</p>
{{/if}}