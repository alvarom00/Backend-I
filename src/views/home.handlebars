<h2>Lista de Productos</h2>

{{#if products.length}}
  <ul>
    {{#each products}}
      <li>
        <strong>{{title}}</strong> - ${{price}}<br />
        {{description}}<br />
        <em>Stock: {{stock}}</em>
      </li>
    {{/each}}
  </ul>

<p>PÃ¡gina {{page}} de {{totalPages}}</p>

<div>
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}&limit={{limit}}">Anterior</a>
  {{/if}}

  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}&limit={{limit}}">Siguiente</a>
  {{/if}}
</div>

{{else}}
  <p>No hay productos disponibles.</p>
{{/if}}
